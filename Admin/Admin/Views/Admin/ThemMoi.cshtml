@model Admin.Models.tbl_NgSD

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<h2>Thêm Người Sử Dụng</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true)
      
       
            
        </div>
            <div class="form-group">

                @*@Html.LabelFor(model => model.TaiKhoan, new { @class = "control-label col-md-2" })*@
                <label class="control-label col-md-2" for="TaiKhoan">Tài Khoản</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TaiKhoan)
                    @Html.ValidationMessageFor(model => model.TaiKhoan)
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2" for="MatKhau">Mật Khẩu</label>
