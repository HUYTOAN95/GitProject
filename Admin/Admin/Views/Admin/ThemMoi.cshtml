                    @Html.EditorFor(model => model.MatKhau)
                    @Html.ValidationMessageFor(model => model.MatKhau)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="MaNV">Mã Nhân Viên</label>
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.MaNV)*@
                    @Html.DropDownList("MaNV")
                    @Html.ValidationMessageFor(model => model.MaNV)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="QuyenTruyCap">Quyền Truy Cập</label>
                <div class="col-md-10">
                    
                        @Html.DropDownList("QuyenTruyCap")
                        @Html.ValidationMessageFor(model => model.QuyenTruyCap)
                   
                   
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="NgayDangKi">Ngày Đăng Kí</label>
                <div class="col-md-10" >
                    <input type="date"

                           @Html.EditorFor(model => model.NgayDangKi)
                           @Html.ValidationMessageFor(model => model.NgayDangKi)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="NgayHetHan">Ngày Hết Hạn</label>
                <div class="col-md-10">
                    <input type="date"
                           @Html.EditorFor(model => model.NgayHetHan)
                           @Html.ValidationMessageFor(model => model.NgayHetHan)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cập Nhật " class="btn btn-default" />
                </div>
            </div>

            }

            <div>
